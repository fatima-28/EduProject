@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">ARCHIVED COURSES</h4>


                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    IMAGE
                                </th>
                                <th>
                                    TITLE
                                </th>
                                <th>
                                    PRICE
                                </th>
                                <th>
                                    AUTHOR
                                </th>


                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="width:80px;height:80px" src="~/img/@product.CourseImgs.Where(m=>m.IsItMain).FirstOrDefault().Url" />
                                    </td>
                                    <td>
                                        @product.Name
                                    </td>
                                    <td>
                                        $ @product.Price
                                    </td>
                                    <td>
                                        @product.Author.FullName
                                    </td>

                                    <td class="">

                                        <a class="btn btn-sm btn-secondary d-flex justify-content-center align-items-center m-1 restore-item" style="width:20px;height:20px" data-id="@product.Id">
                                            <i class="fa-solid fa-rotate-left" style="color:white;font-size:16px"></i>

                                        </a>
                                    </td>

                                </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
