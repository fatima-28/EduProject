@model Course
@{
    ViewData["Title"] = "Update";
    
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">

                <div class="d-flex align-items-center ">
                    @foreach (var item in ViewBag.images)
                    {
                        <div style="width:200px; " class="m-1">
                            <img class="img-fluid" src="~/img/@item.Url" />

                        </div>
                    }
                </div>
                <form method="post" enctype="multipart/form-data" asp-action="Update">

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" asp-for="Price" type="number" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label>Hours</label>
                        <input class="form-control" asp-for="Hour" type="number" />
                        <span class="text-danger" asp-validation-for="Hour"></span>
                    </div>
                    <div class="form-group">
                        <label>Capacity</label>
                        <input class="form-control" asp-for="Capacity" type="number" />
                        <span class="text-danger" asp-validation-for="Capacity"></span>
                    </div>
                    <div class="form-group">
                        <label>Author</label>
                        <input class="form-control" asp-for="Author"  />
                        <span class="text-danger" asp-validation-for="Author"></span>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input class="form-control" asp-for="Description"  />
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <button type="submit" class="my-2 btn btn-warning"><i class="feather mr-2 icon-check-circle"></i>Update</button>
                    <a asp-action="Index" class="my-2 btn btn-secondary"><i class="feather mr-2 icon-check-circle"></i>Cancel</a>
                </form>
            </div>
        </div>

    </div>
</section>
